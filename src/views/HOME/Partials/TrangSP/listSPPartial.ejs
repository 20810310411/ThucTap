<% allsp.forEach(function(allsp) { %>
    <div class="col-sm-6 col-md-6 col-lg-4 col-xl-4">
        <div class="products-single fix">
            <div class="box-img-hover">
                <div class="type-lb">
                    <p class="new">New</p>
                </div>
                <img style="height: 250px; width: 250px"
                 src="images/upload/<%= getRelativeImagePath(allsp.Image) %>" class="img-fluid" alt="Image">
                <div class="mask-icon">
                    <ul>
                        <li><a href="/ChiTietSP?id=<%= allsp._id %>" data-toggle="tooltip" data-placement="right" title="View"><i
                                    class="fas fa-eye"></i></a></li>
                        <li><a href="#" data-toggle="tooltip" data-placement="right" title="Compare"><i
                                    class="fas fa-sync-alt"></i></a></li>
                        <li><a href="#" data-toggle="tooltip" data-placement="right" title="Add to Wishlist"><i
                                    class="far fa-heart"></i></a></li>
                    </ul>

                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-md-6 col-lg-8 col-xl-8">
        <div class="why-text full-width">
            <a href="/ChiTietSP?id=<%= allsp._id %>">
                <h4>
                    <%= allsp.TenSP %>
                </h4>
            </a>
            <h5> <del>
                    <%= formatCurrency(allsp.GiaCu) %>
                </del>
                <%= formatCurrency(allsp.GiaBan) %>
            </h5>
            <p>
                <%= allsp.MoTa %>
            </p>
            <a class="btn hvr-hover" href="#">Add to Cart</a>
        </div>
    </div>
    <% }); %>